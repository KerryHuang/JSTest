
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap-clockpicker.min.css" rel="stylesheet" />

<div class="form-group">
    <div class="col-xs-6">
        <div class="input-group clockpicker">
            <input type="text" class="form-control" value="12:34">
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-time"></span>
            </span>
        </div>
        <button id="showClock" class="btn btn-default">設定時間</button>
    </div>
</div>
<br/>

@section Scripts {
    <script src="~/Scripts/jquery-clockpicker.min.js"></script>
    <script>
        var clockInput = $('.clockpicker').clockpicker({
            placement: 'right',
            autoclose: true
        });

        $('#showClock').click(function (e) {
            e.stopPropagation();
            $('.clockpicker').clockpicker('show');
        });
    </script>
}